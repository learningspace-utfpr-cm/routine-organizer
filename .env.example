# ======================
# DATABASE CONFIGURATION
# ======================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name?schema=schema_name
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# ======================
# NEXTAUTH CONFIGURATION
# ======================
# Base URL of your application
NEXTAUTH_URL="http://localhost:3000"

# Secret key for JWT tokens (generate a secure random string)
# You can generate one at: https://generate-secret.vercel.app/32
NEXTAUTH_SECRET="your-secret-key-here"

# Internal URL (usually same as NEXTAUTH_URL)
NEXTAUTH_URL_INTERNAL="http://localhost:3000"

# ======================
# PRODUCTION ENVIRONMENT
# ======================
# For production, update these values:
# NEXTAUTH_URL="https://yourdomain.com"
# NEXTAUTH_URL_INTERNAL="https://yourdomain.com"
# DATABASE_URL="your-production-database-url"

# ======================
# MINIO CONFIGURATION
# ======================
# Endpoint/host where MinIO is reachable from the app.
# If your app runs on the host machine use "localhost" and the mapped host port (e.g. 9001).
# If your app runs inside the same docker-compose, use the service name "minio" and the container port (9000).
MINIO_ENDPOINT=localhost
MINIO_PORT=9001
MINIO_USE_SSL=false

# MinIO credentials (default in docker-compose provided)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Bucket name to use (the code will create it if missing)
MINIO_BUCKET=routine
MINIO_REGION=us-east-1

# Optional: public URL used to build object URLs (include protocol and host:port)
# Example: http://localhost:9001  or http://minio:9000 (when used from other container)
MINIO_PUBLIC_URL=http://localhost:9001